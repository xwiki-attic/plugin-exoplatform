<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xpn.xwiki.platform.plugins</groupId>
    <artifactId>xwiki-plugins</artifactId>
    <version>21-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-plugin-exoplatform</artifactId>
  <version>0.1-SNAPSHOT</version>
  <name>XWiki Platform - Plugins - eXo Platform</name>
  <packaging>jar</packaging>
  <description>XWiki Platform - Plugins - eXo Platform</description>
  <dependencies>
    <dependency>
      <groupId>com.xpn.xwiki.platform</groupId>
      <artifactId>xwiki-core</artifactId>
      <version>1.7.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>exo</groupId>
      <artifactId>exoplatform.services.jcr.impl</artifactId>
      <version>1.0</version>
      <!-- Exclude Castor as it seems Exo JCR implementation is looking for verion 0.9.5 which
           isn't in the local repo. Not sure why it needs that and it seems we don't need it
           for what we do for now. -->
      <exclusions>
        <exclusion>
          <groupId>castor</groupId>
          <artifactId>castor</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <!-- We must configure SCM in each module. For more information see:
       http://svn.xwiki.org/svnroot/xwiki/platform/pom/trunk/pom.xml -->
  <scm>
    <connection>scm:svn:http://svn.xwiki.org/svnroot/xwiki/platform/xwiki-plugins/trunk/exoplatform</connection>
    <developerConnection>scm:svn:https://svn.xwiki.org/svnroot/xwiki/platform/xwiki-plugins/trunk/exoplatform</developerConnection>
    <url>http://svn.xwiki.org/svnroot/xwiki/platform/xwiki-plugins/trunk/exoplatform</url>
  </scm>
  <issueManagement>
    <system>jira</system>
    <url>http://jira.xwiki.org/jira/browse/XPEXOPLATFORM</url>
  </issueManagement>
</project>
        
